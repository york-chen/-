page{
    background-color: #eee;
}
.video-wrap{
    width: 750rpx;
    height: 450rpx;
}
.cy-video{
    width: 750rpx;
}
.info{
    padding: 20rpx ;
    background-color: #fff;
}
.info .date{
    color: #ccc;
    font-size: 24rpx;
}
.section .section-title{
    padding: 20rpx;
    background-color: #fff;
    font-weight: bold;
    margin-top: 15rpx;
}
.section .list-item{
    display: flex;
    padding: 20rpx;
    background-color: #fff;
    margin-bottom: 15rpx;
}
.list-item .left{
    flex: 1;
    width: 250rpx;
    height: 180rpx;
}
.list-item .left .img-short1{
    width: 250rpx;
    height: 180rpx;
}
.list-item .right{
    flex: 2;
    padding-left: 15rpx;
    position: relative;
}
.right-title{
    color: #4e4e4e;
    font-size: 30rpx;
}
.right .date{
    position: absolute;
    bottom: 0;
    right: 0;
    color:#ddd;
    font-size: 24rpx;
}