.data-loading {
    height: 100rpx;
    line-height: 100rpx;
    background-color: #eee;
    text-align: center;
    font-size: 14px;
}

.list-item{
    display: flex;
    padding: 20rpx;
    background-color: #fff;
    margin-bottom: 15rpx;
}
.list-item .left{
    flex: 1;
    width: 250rpx;
    height: 180rpx;
}
.list-item .left .img-short1{
    width: 250rpx;
    height: 180rpx;
}
.list-item .right{
    flex: 2;
    padding-left: 15rpx;
    position: relative;
}
.right-title{
    color: #4e4e4e;
    font-size: 30rpx;
}
.right .date{
    position: absolute;
    bottom: 0;
    right: 0;
    color:#ddd;
    font-size: 24rpx;
}